{
  "manifest_version": 2,
  "name": "hyde â€” hide the YouTube video player controls",
  "version": "1.0",
  "description": "turn the YouTube video player controls off/on",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "commands": {
    "hide": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "hide/show controls"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*.youtube.com/watch?v=*", "https://*.youtube.com/watch?v=*"],
      "js": ["src/hide.js", "src/show.js"]
    }
  ]
}